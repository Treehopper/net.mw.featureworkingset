<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer?before=additions">
         <command
               commandId="net.mw.workingset.utils.createworkingsets"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <instanceof
                        value="org.eclipse.core.resources.IProject">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="net.mw.workingset.utils.createworkingsets"
            name="Create Working Sets from Feature">
      </command>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="net.mw.featureworkingset.FeatureProjectTester"
            id="net.mw.workingset.utils.FeatureProjectTester"
            namespace="net.mw.workingset.utils"
            properties="isFeatureProject"
            type="org.eclipse.core.resources.IProject">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="net.mw.featureworkingset.CreateWorkingSetsHandler"
            commandId="net.mw.workingset.utils.createworkingsets">
         <activeWhen>
            <iterate>
               <and>
                  <instanceof
                        value="org.eclipse.core.resources.IProject">
                  </instanceof>
                  <test
                        forcePluginActivation="true"
                        property="net.mw.workingset.utils.isFeatureProject">
                  </test>
               </and>
            </iterate>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.workingSets">
      <workingSet
            description="A working set created from the contents of an eclipse feature."
            elementAdapterClass="org.eclipse.jdt.internal.ui.workingsets.JavaWorkingSetElementAdapter"
            icon="icons/feature_workset_obj.png"
            id="net.mw.featureworkingset"
            name="FeatureWorkingSet"
            pageClass="net.mw.featureworkingset.FeatureWorkingSetPage"
            updaterClass="net.mw.featureworkingset.FeatureWorkingSetUpdater">
      </workingSet>
   </extension>

</plugin>
